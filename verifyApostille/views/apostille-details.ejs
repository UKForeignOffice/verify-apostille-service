		<div class="step current">
			<p class="action group">
				<a class="button" href="/verify">Start again</a>								
				<br />
				<br />
				<input type="button" value="Print" onclick=" PrintWin(); " class="button-secondary" />
			</p>
		</div>
	</div>  

        <script type="text/javascript">

            var win;
	
            function resetForm() {
                window.location.replace('/VerifyApostille');
                if (win != null) {
                    win.close();
                }
            }

            function PrintWin() {		
                var url = '/print';
                win = window.open(url, 'winPrint', 'height=500,width=650,toolbar=0,location=0,status=0,menubar=0');
            }
   
        </script>


        </div>
    </section>
</div>
